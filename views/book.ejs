<!-- views/booking.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hotel Management</title>
    <!-- Thêm Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/home">HỆ THỐNG QUẢN LÝ KHÁCH SẠN</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">Về chúng tôi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Liên hệ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Đăng xuất</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="centered-rectangle"></div>
    <div class="container">
        <h1 class="mt-4">Đặt phòng</h1>

        <% if (bookingSuccess) { %>
            <div class="alert alert-success" role="alert">
                Phòng đã được đặt thành công!
            </div>
            <% } else if (bookingError) { %>
                <div class="alert alert-danger" role="alert">
                    Đã xảy ra lỗi khi đặt phòng. Vui lòng thử lại sau.
                </div>
                <% } %>

                    <p>Thông tin phòng</p>
                    <p>Phòng: <%= room.room_number %>
                    </p>
                    <p>Loại phòng: <%= room.room_type %>
                    </p>
                    <p>Trạng thái phòng: <%= room.status %>
                    </p>
                    <p>Giá: <%= room.price %> VND</p>

                    <% if (!bookingSuccess) { %>
                        <form action="/book/<%= room.id %>" method="post">
                            <button type="submit" class="btn btn-primary">Đặt phòng</button>
                        </form>
                        <% } %>
    </div>
    <a href="/index" class="btn btn-primary">Quay lại</a>
    <!-- ... (Phần scripts và các thư viện khác) ... -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>